<div class = "row"> 
  <div class = "form-column col s8 offset-s2 col m4 offset-m4 col l4 offset-l4">
 		<%= form_for @note, remote: true do |f| %>
 		  	<%= f.label :title, class: "form-title" %>
 		  	<br />
 		  	<%= f.text_field :title, required: true  %>
 		  <div class="form-body">
 		  	<%= f.label :body %>
 		  	<br />
 		  	<%= f.text_area :body, required: true %>
 		  </div>
 		  <div class="form-actions">
 		  	<%= f.submit "Save", class: "form-buttons waves-effect waves-light btn" %>
 		  	<%= link_to "Cancel", "#", data: {dismiss: "modal"}, class: "cancel-button form-buttons waves-effect waves-light btn" %>
 		  </div>
 		<% end %>
	</div>
</div>

